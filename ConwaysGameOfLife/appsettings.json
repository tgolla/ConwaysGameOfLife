{
  "ApplicationInsights": {
    "InstrumentationKey": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\log.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception} {Properties:j}{NewLine}"
        }
      }
    ],
    "Enrich": [ "WithMachineName", "WithProcessId", "WithProcessName", "WithThreadId", "WithThreadName", "WithExceptionDetails" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ConwaysGameOfLifeApiDb": "Data Source=localhost\\sqlexpress;Database=ConwaysGameOfLifeApiDb;Integrated Security=false;Encrypt=false;User ID=xxxxxxxx;Password=xxxxxxxx;"
  },
  "ConwaysGameOfLifeSettings": {
    "ExpiresInXDays": 15,
    "MaximunGenerationBeforeEnding": 100000,
    "StablePopulationIterations": 5206
  }
}
